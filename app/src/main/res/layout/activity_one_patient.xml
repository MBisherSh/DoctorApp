<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8A5D9F0">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:elevation="20dp"
                android:id="@+id/cardOnePatientImage"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgOnePatientImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ln"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/cardOnePatientImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView

        android:textSize="20dp"
        android:id="@+id/txtOnePatientName"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabOnePatientEditImage"

                        android:layout_gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cam"
                        app:backgroundTint="@color/colorPrimary"
                        android:clickable="true"
                        app:borderWidth="0dp"
                        app:elevation="6dp"
                        app:fabSize="normal" />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabOnePatientEdit"
android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"
                        app:backgroundTint="@color/colorPrimary"
                        android:clickable="true"

                        app:borderWidth="0dp"
                        app:elevation="6dp"
                        app:fabSize="normal" />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fabOnePatientDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete"
                        app:backgroundTint="@color/colorPrimary"
                        android:layout_gravity="end"
                        android:clickable="true"
                        app:borderWidth="0dp"
                        app:elevation="6dp"
                        app:fabSize="normal" />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabOnePatientAddAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_money"
                        app:backgroundTint="@color/colorPrimary"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="end"
                        android:clickable="true"
                        app:borderWidth="0dp"
                        app:elevation="6dp"
                        app:fabSize="normal" />


                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_id"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="ID: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientID"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_gender"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Gender: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientSex"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_age"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Age: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientAge"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Phone: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientPhone"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_attach_money_black_24dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Remaining amount: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientPayment"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:textSize="16dp"
                        android:text="S.P "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_address"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Address: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientAddress"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_illness"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Illnesses: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientIllnesses"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_drugs"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Drugs: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textSize="20dp"
                        android:id="@+id/txtOnePatientDrugs"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_review"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"

                        android:textSize="20dp"
                        android:text="Review: "

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView

                    android:textSize="20dp"
                    android:id="@+id/txtOnePatientReview"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginStart="5dp"

                    android:textSize="20dp"
                    android:text="Appointments: "
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerOnePatientAppointments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginStart="5dp"

                        android:layout_marginTop="15dp"
                        android:textSize="20dp"
                        android:text="Payments: "
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="5dp"

                        android:layout_marginTop="15dp"
                        android:textSize="20dp"
                        android:text="(Total:"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/txtOnePatientTotal"
                        android:layout_marginTop="15dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="5dp"

                        android:layout_marginTop="15dp"
                        android:textSize="20dp"
                        android:text=" S.P)"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerOnePatientPayments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>




            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>



</LinearLayout>